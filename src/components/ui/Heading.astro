---
const headingOptions = {
  h1: "text-4xl sm:text-5xl",
  h2: "text-3xl sm:text-4xl",
  h3: "text-2xl sm:text-3xl",
  h4: "text-xl sm:text-2xl",
  h5: "text-lg sm:text-xl",
  h6: "text-base sm:text-lg",
};

type Props = {
  tag: keyof typeof headingOptions;
  size?: keyof typeof headingOptions;
  classes?: string;
};

const { tag, size, classes, ...rest } = Astro.props;

const Tag = tag;
---

<Tag
  class:list={[
    headingOptions[size ? size : tag], // style prop overrides tag prop
    "max-w-heading font-bold", // universal styles
    classes, // user defined classes
  ]}
  {...rest}
>
  <slot />
</Tag>
