---
import { Icon } from "astro-icon";

const { pathname } = Astro.url;
const isOnHomePage = pathname === "/" || pathname === "";
---

<div class="container py-4 sm:py-8 relative">
  {
    isOnHomePage ? (
      <Icon name="logo-horizontal" class="w-60 sm:w-96" />
    ) : (
      <a href="/">
        <Icon name="logo-horizontal" class="w-60 sm:w-96" />
      </a>
    )
  }
</div>
